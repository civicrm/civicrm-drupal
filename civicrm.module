  // last. This is the only way to make sure the jquery noconflict works.
  db_query("UPDATE {system} SET weight = 100 WHERE name = 'civicrm'");
  menu_rebuild();

  menu_link_maintain('civicrm', 'delete', 'civicrm', 'CiviCRM');

  $options = array(
    'link_title' => 'CiviCRM',
    'link_path' => 'civicrm/dashboard',
